/********** main *****************************/

// configure startup window size and turn off gamma correction
name(main):W=1280;H=720
name(main):gamma=1.0

/********** vr_emulator *****************************/
// construct an emulated vr kit with certain number of active trackers
//type(vr_emulator):create_nr_trackers=2
